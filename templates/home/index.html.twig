{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block links %}
    {{ encore_entry_link_tags('home_css') }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block body %}
<section class="home d-grid gap-3 p-3">
    {% for post in posts %}
    <div class="home__post rounded">
        <img src={{ "http://127.0.0.1:3000/images/post/" ~ post.image|e }} alt="..." class="rounded-top w-100">
        <div class="p-3">
            <div class="d-flex home__post__user">
                <img style="height: 2rem;" src={{ "http://127.0.0.1:3000/images/user/" ~ post.user.photo|e }} alt="" class="rounded-circle">
                <h5>{{ post.user.username|e }}</h5>
            </div>
            <p>{{ post.description|e }}</p>
            {% set likes = 0 %}
            {% set dislikes = 0 %}

            {% for like in post.likes %}
                {% if like.value == true %}
                    {% set likes = likes + 1 %}
                {% elseif like.value == false %}
                    {% set dislikes = dislikes + 1 %}
                {% endif %}
            {% endfor %}
            <div class="d-flex justify-content-around">
                <div class="d-flex align-items-center">
                    <p class="m-0">{{ likes }}</p>
                    <ion-icon class="like" data-postId='{{ post.id|e }}' data-userId='{{ post.user.id|e }}'  name="heart-outline"></ion-icon>
                </div>
                <div class="d-flex align-items-center">
                    <p class="m-0">{{ dislikes }}</p>
                    <ion-icon class="dislike" data-postId='{{ post.id|e }}' data-userId='{{ post.user.id|e }}' name="heart-dislike-outline"></ion-icon>
                </div>
            </div>
            <a href={{ path('post', {id: post.id}) }} class="btn btn-primary">En savoir plus</a>
        </div>
      </div>
    {% endfor %}
</section>
{% endblock %}
